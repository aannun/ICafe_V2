<UserControl x:Class="ICafeUI.FileBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICafeUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Border CornerRadius="5" Width="16" Height="16" Margin="4" Background="DarkGray" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Border Background="White" Width="8" Height="8" CornerRadius="5"></Border>
            </Border>
            <TextBox Name="Text" VerticalContentAlignment="Center"></TextBox>
        </DockPanel>
    </Grid>
</UserControl>
