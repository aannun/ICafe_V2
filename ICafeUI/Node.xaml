<UserControl x:Class="ICafeUI.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICafeUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" Width="100" Height="50"
             Loaded="UserControl_Loaded"
             >
    <Grid x:Name="Grid">
        <Canvas x:Name="Handler"></Canvas>
        <Border x:Name="Border" BorderThickness="1" CornerRadius="10,10,10,10" Background="White" BorderBrush="Black">
            <TextBlock x:Name="Name" Foreground="Black" TextAlignment="Center" Height="20"></TextBlock>
        </Border>
        <local:ConnectionSlot x:Name="LeftConnector" Margin="-5,20,95,20"/>
        <local:ConnectionSlot x:Name="RightConnector" Margin="95,20,-5,20"/>
    </Grid>
</UserControl>
