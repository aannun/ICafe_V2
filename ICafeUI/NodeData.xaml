<UserControl x:Class="ICafeUI.NodeData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICafeUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Foreground="White" Background="#FF1F86AC" Margin="2,5">Node Name</Label>
            <Grid>
                <TextBlock Margin="5,2" Name="txtHint" Text="Search..." Foreground="LightGray"/>
                <TextBox MinWidth="50" Name="txtSearchBox" Background="Transparent" Foreground="White" TextChanged="TxtSearchBox_TextChanged"/>
            </Grid>
            <StackPanel Name="Data">
                
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
