<UserControl x:Class="ICafeUI.NodeData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICafeUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF323232">
        <DockPanel>
            <Label Name="NodeName_Label" DockPanel.Dock="Top" Foreground="White" Background="#FF1F86AC">Node Name</Label>
            <Grid DockPanel.Dock="Top" Margin="0,4">
                <TextBlock Margin="5,2" Name="txtHint" Text="Search..." Foreground="LightGray"/>
                <TextBox MinWidth="50" Name="txtSearchBox" Background="Transparent" Foreground="White" TextChanged="TxtSearchBox_TextChanged"/>
            </Grid>
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <StackPanel Name="Data"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
